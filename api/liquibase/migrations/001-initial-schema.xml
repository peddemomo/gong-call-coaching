<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Enable pgcrypto extension for gen_random_uuid() -->
    <changeSet id="001-enable-pgcrypto" author="system">
        <sql>CREATE EXTENSION IF NOT EXISTS pgcrypto;</sql>
    </changeSet>

    <!-- Create aes table -->
    <changeSet id="001-create-aes-table" author="system">
        <createTable tableName="aes">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="TEXT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create prompts table -->
    <changeSet id="001-create-prompts-table" author="system">
        <createTable tableName="prompts">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="TEXT"/>
            <column name="body" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create email_logs table -->
    <changeSet id="001-create-email-logs-table" author="system">
        <createTable tableName="email_logs">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ae_email" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="gong_call_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="TEXT"/>
            <column name="body" type="TEXT"/>
            <column name="error_message" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint 
            tableName="email_logs" 
            columnNames="ae_email, gong_call_id" 
            constraintName="email_logs_ae_email_gong_call_id_unique"/>
    </changeSet>

</databaseChangeLog>
